rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profil resimleri
    match /profile_images/{fileName} {
      // Herkes okuyabilir
      allow read: if true;
      // Sadece dosya adı [uid].jpg olan kişi yazabilir
      allow write: if request.auth != null && fileName == request.auth.uid + ".jpg";
    }
    
    // Özel mesaj resimleri
    match /private_messages/{conversationId}/{fileName} {
      allow read, write: if request.auth != null;
    }

    // Genel kurallar (diğer her şey için oturum açmış olmak yeterli)
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
